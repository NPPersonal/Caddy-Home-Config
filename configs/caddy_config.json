{
  "admin": {},
  "logging": {
    "logs": {
      "default": {
        "level": "DEBUG",
        "writer": {
          "output": "file",
          "filename": "/var/log/caddy/caddy.log",
          "mode": "644"
        }
      },
      "console-logs": {
        "level": "DEBUG",
        "writer": {
          "output": "stdout"
        }
      }
    }
  },
  "apps": {
    "crowdsec": {
      "api_url": "http://crowdsec:8080",
      "api_key": "{env.CROWDSEC_API_KEY}",
      "ticker_interval": "10s",
      "enable_streaming": true
    },
    "http": {
      "servers": {
        "serv0": {
          "listen": [":443", ":33080"],
          "protocols": ["h1", "h2", "h2c", "h3"],
          "routes": [
            {
              "terminal": true,
              "match": [{ "host": ["pihole.home.arpa"] }],
              "handle": [
                {
                  "handler": "crowdsec"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [{ "path": ["/"] }],
                      "handle": [
                        {
                          "handler": "static_response",
                          "status_code": "302",
                          "headers": {
                            "location": ["/admin"]
                          }
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "pihole:80" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "terminal": true,
              "match": [{ "host": ["dozzle.mingchun.stream"] }],
              "handle": [
                {
                  "handler": "crowdsec"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "dozzle:8080" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "terminal": true,
              "match": [{ "host": ["caddy-manager.home.arpa"] }],
              "handle": [
                {
                  "handler": "crowdsec"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "caddymanager-frontend:80" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "terminal": true,
              "match": [
                { "host": ["gitea.home.arpa", "gitea.mingchun.stream"] }
              ],
              "handle": [
                {
                  "handler": "crowdsec"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "gitea:3000" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "terminal": true,
              "match": [{ "host": ["authentik.mingchun.stream"] }],
              "handle": [
                {
                  "handler": "crowdsec"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [{ "path": ["/*"] }],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "authentik-server:9000" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "terminal": true,
              "match": [
                {
                  "host": ["netbird.mingchun.stream"]
                }
              ],
              "handle": [
                {
                  "handler": "crowdsec"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        { "path": ["/signalexchange.SignalExchange/*"] }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http",
                            "versions": ["h2c", "2"]
                          },
                          "upstreams": [{ "dial": "netbird-signal:80" }]
                        }
                      ]
                    },
                    {
                      "match": [{ "path": ["/ws-proxy/signal*"] }],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "netbird-signal:80" }]
                        }
                      ]
                    },
                    {
                      "match": [{ "path": ["/api*"] }],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "netbird-management:443" }]
                        }
                      ]
                    },
                    {
                      "match": [
                        { "path": ["/management.ManagementService/*"] }
                      ],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "transport": {
                            "protocol": "http",
                            "versions": ["h2c", "2"]
                          },
                          "upstreams": [{ "dial": "netbird-management:443" }]
                        }
                      ]
                    },
                    {
                      "match": [{ "path": ["/ws-proxy/management*"] }],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "netbird-management:443" }]
                        }
                      ]
                    },
                    {
                      "match": [{ "path": ["/relay*"] }],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "netbird-relay:33080" }]
                        }
                      ]
                    },
                    {
                      "match": [{ "path": ["/*"] }],
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "netbird-dashboard:80" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "terminal": true,
              "match": [{ "host": ["twenty-crm.mingchun.stream"] }],
              "handle": [
                {
                  "handler": "crowdsec"
                },
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "twenty-crm:3000" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "terminal": true,
              "match": [{ "host": ["grafana.mingchun.stream"] }],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "crowdsec"
                        },
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [{ "dial": "grafana:3000" }]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "layer4": {
      "servers": {
        "coturn-server": {
          "listen": ["udp/:3478"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "proxy",
                  "proxy_protocol": "v1",
                  "upstreams": [{ "dial": ["udp/netbird-coturn:3478"] }]
                }
              ]
            }
          ]
        }
      }
    }
  }
}
